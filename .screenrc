hardstatus alwayslastline
hardstatus ignore
#caption always "%{= kw}%{= kC} %3`%{+r kc}%-w%{-r} %{+r kw}%n %t%{-r} %{+r kc}%+w%{-r}"

sorendition +b Wk		# coloring cmds & messages

startup_message off
activity "%c activity -> %n%f %t"

term screen-256color
attrcolor b ".I"

bind 'K' kill
bind 'W' windowlist
bind 'V' split -v
bind 'R' wrap
bind 'r' resize
bind '+' resize +5
bind '-' resize -5

defscrollback 10000
bindkey -k k7 focus up
bindkey -k k5 prev
bindkey -k k6 next

altscreen on
nethack off
autodetach on
crlf off
hardcopy_append on
startup_message off
vbell on
silencewait 15
sorendition kG
activity "%C -> %n%f %t activity!"
bell "------------------------------- %n%f - %t ------------------------------"
pow_detach_msg "BYE"
vbell_msg " *beep* "
msgwait 1
version
msgwait 2
